<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="175dp"
        android:layout_height="163dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="Логотип Империя Красоты"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Где ваша красота встречает заботу"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="24dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/oval_button"
        android:padding="12dp"
        android:text="Услуги"
        android:textColor="#FFFFFF"
        android:minWidth="300dp"/>

    <Button
        android:id="@+id/buttonMasters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/oval_button"
        android:padding="12dp"
        android:text="Мастера"
        android:textColor="#FFFFFF"
        android:minWidth="300dp"/>

    <Button
        android:id="@+id/btn_reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/oval_button"
        android:padding="12dp"
        android:text="Запись"
        android:textColor="#FFFFFF"
        android:minWidth="300dp"/>

    <Button
        android:id="@+id/buttonShowReservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/oval_button"
        android:padding="12dp"
        android:text="Показать записи"
        android:textColor="#FFFFFF"
        android:minWidth="300dp"/>


    <Button
        android:id="@+id/btn_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_button"
        android:padding="12dp"
        android:text="Контакты"
        android:textColor="#FFFFFF"
        android:minWidth="300dp"/>

</LinearLayout>